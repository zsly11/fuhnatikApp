<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#80000000"
        android:scaleType="centerCrop"
        android:id="@+id/fantasyReporterImage" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/admin_menu"
        android:id="@+id/adminMenuIcon"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fantasyReporterImage"
        android:background="#66000000"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title"
            android:id="@+id/fantasyTitle"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:paddingTop="10dp"
            android:layout_alignLeft="@+id/dateText"
            android:layout_alignStart="@+id/dateText" />

        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateText"
            android:layout_below="@id/fantasyTitle"
            android:layout_marginTop="-3dp"
            android:text="DATE"
            android:textSize="9dp"
            android:textAllCaps="true"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fantasyTitle"
            android:layout_toEndOf="@+id/fantasyTitle">

        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_right"
            android:text=">     "
            android:textColor="#ffffff"
            android:id="@+id/readStoryArrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</RelativeLayout>

