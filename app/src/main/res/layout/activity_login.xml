<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fuhnatik.fuhnatik.MainActivity"
    android:background="@drawable/login_background"
    android:padding="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/register_screen_bg"
        android:padding="8dp"
        android:layout_marginTop="100dp"
        android:id="@+id/loginForm">

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginUsername"
            android:background="@drawable/edittext_login_register"
            android:padding="2dp">

            <TextView android:id="@+id/usernameText"
                android:layout_width="105dp"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:text="Username"
                android:textColor="#2d6824"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/usernameEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="This is your e-mail"
                android:textSize="15dp"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#cdcdcd"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:singleLine="true"/>

        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerPassword"
            android:background="@drawable/edittext_login_register"
            android:layout_below="@+id/loginUsername"
            android:padding="2dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/passwordText"
                android:layout_width="105dp"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:text="Password"
                android:textSize="18dp"
                android:textColor="#2d6824"/>

            <EditText
                android:id="@+id/passwordEdit"
                android:layout_width="fill_parent"
                android:hint="Enter password"
                android:textColorHint="#cdcdcd"
                android:inputType="textPassword"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/passwordShowText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:text="SHOW"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#2d6824"/>
            <TextView
                android:id="@+id/passwordHideText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:padding="10dp"
                android:text="HIDE"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#2d6824"/>
        </LinearLayout>



    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginForm"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_green"
        android:text="Let's Play!"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:id="@+id/loginButton"/>


</RelativeLayout>
